<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <TextView
            android:id="@+id/productName"
            style="@style/listItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Product Name"
            android:textColor="#6a6969"
            android:textSize="17sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        style="@style/listSubItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1" >

        <TextView
            android:id="@+id/priceView"
            style="@style/listSubItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginRight="13dp"
          
            android:text="Price"
            android:textColor="#6a6969"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/priceProduct"
            style="@style/listSubItemStyle"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:text="0.00"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mpView"
            style="@style/listSubItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:text="M R P"
            android:textColor="#6a6969"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/mpProduct"
            style="@style/listSubItemStyle"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:text="0.00"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2"
 >

        <TextView
            android:id="@+id/dpView"
            style="@style/listSubItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        
            android:layout_marginRight="13dp"

            android:text="D P"
            android:textColor="#6a6969"
            android:textSize="17sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dpProduct"
            style="@style/listSubItemStyle"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:text="0.00"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/RpView"
            style="@style/listSubItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:text="R P"
            android:textColor="#6a6969"
            android:textSize="17sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/rpProduct"
            style="@style/listSubItemStyle"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:text="0.00"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout3" >
        <TextView
    android:id="@+id/cartonqtyView"
    style="@style/listSubItemStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="13dp"
    android:layout_marginTop="5dp"
    android:text="Qty in carton"
    android:textColor="#6a6969"
    android:textSize="17sp"
    android:visibility="visible" />
<TextView
    android:id="@+id/cartonqtyProduct"
    style="@style/listSubItemStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="13dp"
    android:layout_marginTop="5dp"
    android:text="0.00"
    android:textStyle="bold"
    android:textColor="#000000"
    android:textSize="17sp"
    android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>