<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
        android:gravity="center_vertical"
    android:background="@drawable/border"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/milestonetext"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:ems="10"
                android:focusable="true"
                android:hint="Payment Terms"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textSize="@dimen/text_two" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/qtyText"
                android:layout_width="wrap_content"
                android:layout_marginLeft="2dp"

                android:maxLength="6"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:ems="10"
                android:focusable="true"
                android:hint="Qty"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="@dimen/text_two" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/rateText"
                android:layout_width="wrap_content"
                android:maxLength="6"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:ems="10"
                android:focusable="true"
                android:hint="Rate"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="@dimen/text_two" />



        </android.support.design.widget.TextInputLayout>






        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/amountText"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:ems="10"
                android:focusable="true"
                android:hint="Amount"
                android:maxLength="15"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="@dimen/text_two" />
        </android.support.design.widget.TextInputLayout>
            <!--&gt;-->



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">
        <Button

            android:layout_marginLeft="5dp"
            android:background="@drawable/minus"
            android:id="@+id/removeMilestone"
            android:layout_width="28dp"
            android:visibility="gone"

            android:layout_height="28dp" />

        <Button

            android:layout_marginLeft="10dp"
            android:background="@drawable/addfields"
            android:id="@+id/addNewMilestone"


            android:layout_width="28dp"
            android:layout_height="28dp" />
    </LinearLayout>

</LinearLayout>

