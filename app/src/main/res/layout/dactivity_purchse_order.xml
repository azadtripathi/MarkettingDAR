<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_back"
    tools:context=".HistoryView"
    android:padding="10dp" >
    <TextView
        android:id="@+id/textView1"
        style="@style/textLebal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Distributor" />

<Spinner
    android:id="@+id/distributorSpinnerOnpruchaseOrder"
    style="@style/editLebal"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/textView1"
    
        />

    <TextView
        android:id="@+id/textView3"
        style="@style/textLebal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/distributorSpinnerOnpruchaseOrder"
        android:text="Group" />

    <Spinner
        android:id="@+id/groupSpinnerOnpruchaseOrder"
        style="@style/editLebal"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView3"
                       />
    

    <TextView
        android:id="@+id/textView4"
        style="@style/textLebal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/groupSpinnerOnpruchaseOrder"
        android:text="Sub Group" />

    <Spinner
        android:id="@+id/subGroupSpinnerOnpruchaseOrder"
        style="@style/editLebal"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView4"
        android:layout_marginBottom="10dp"
        
          />

<TextView
    android:id="@+id/textView5"
    style="@style/textLebal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/subGroupSpinnerOnpruchaseOrder"
    android:text="Products" />

<Spinner
    android:id="@+id/productOnpruchaseOrder"
    style="@style/editLebal"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/textView5"
    android:layout_marginBottom="10dp"
    
     />
     <ListView
          android:id="@+id/bookOrderlist"
          style="@style/listStyle"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_below="@+id/layout"
          android:background="@drawable/app_back"
          android:padding="10dp" />

     <RelativeLayout
         android:id="@+id/layout"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/productOnpruchaseOrder" >

         <EditText
             android:id="@+id/qtyincartoon"
             android:layout_width="80dp"
             android:layout_height="25dp"
             android:layout_alignParentTop="true"
             android:layout_marginRight="5dp"
             android:layout_toRightOf="@+id/textView2"
             android:background="@drawable/input_style"
             android:ems="10"
             android:gravity="right|center_vertical"
             android:hint="0.00"
             android:enabled="false"
             android:padding="4dp" />

         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/qtyincartoon"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:gravity="center_vertical"
             android:paddingRight="5dp"
             android:text="Qty in cart"
             android:textColor="#000000"
             android:textSize="17sp" />

         <TextView
             android:id="@+id/qty"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/qtyincartoon"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/qtyincartoon"
             android:gravity="center_vertical"
             android:text="Qty"
             android:textColor="#000000"
             android:textSize="17sp" />

         <EditText
             android:id="@+id/quantity"
             android:layout_width="50dp"
             android:layout_height="25dp"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/qty"
             android:background="@drawable/input_style"
             android:ems="10"
             android:gravity="right|center_vertical"
             android:hint="0.00"
             android:inputType="numberDecimal"
             android:maxLength="4"
             android:padding="4dp" />

         <EditText
             android:id="@+id/total_amount"
             android:layout_width="50dp"
             android:layout_height="25dp"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@+id/quantity"
             android:background="@drawable/input_style"
             android:ems="10"
             android:enabled="false"
             android:gravity="right|center_vertical"
             android:hint="Total Amount"
             android:inputType="number"
             android:maxLength="4"
             android:padding="4dp" />

         <ImageButton
             android:id="@+id/add"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
             android:background="@drawable/add"
             android:text="Add" />

     </RelativeLayout>
      
</RelativeLayout>
