<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:id="@+id/vi"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/tagCallName"
                style="@style/textLebal"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"

                android:background="@drawable/ic_arrow_1"
                android:backgroundTint="#f39c12"
                android:padding="5dp"
                android:text="Action"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tagCallName"
                android:padding="2dp"
                android:layout_margin="3dp"
                android:layout_toRightOf="@+id/vi"

                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/neweditLebal"
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Task"
                            android:visibility="gone"
                            android:textColor="#0073b7"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/actionTask"
                            style="@style/neweditLebal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="N/A" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/neweditLebal"
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Ass.Dt"
                            android:textColor="#0073b7"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/actionAssDt"
                            style="@style/neweditLebal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="N/A" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/neweditLebal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="By"
                            android:textColor="#0073b7"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/actionAssBy"
                            style="@style/neweditLebal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="N/A" />

                        <TextView
                            style="@style/neweditLebal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=",To"
                            android:textColor="#0073b7"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/actionAssTo"
                            style="@style/neweditLebal"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="N/A" />
                    </LinearLayout>

                    <!--    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="68dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                style="@style/neweditLebal"
                                android:textColor="#0073b7"
                                android:textStyle="bold"
                                android:text="To"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="N/A"

                                style="@style/neweditLebal"
                                android:padding="5dp"
                                android:id="@+id/actionAssTo"/>
                        </LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/editAction"
                            android:layout_width="65dp"
                            android:layout_height="32dp"
                            android:layout_margin="@dimen/button_margin"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/button_style"
                            android:gravity="center"
                            android:padding="5dp"
                            android:requiresFadingEdge="vertical"
                            android:text="Edit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/deleteAction"
                            android:layout_width="65dp"
                            android:layout_height="32dp"
                            android:layout_margin="@dimen/button_margin"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/button_style"
                            android:backgroundTint="@color/tamato"
                            android:gravity="center"
                            android:padding="5dp"
                            android:requiresFadingEdge="vertical"
                            android:text="Delete"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>