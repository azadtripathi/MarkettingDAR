<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4052b5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remarkLayout"
        android:background="#ffffff"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_remark"
            android:layout_width="match_parent"
            app:met_floatingLabel="highlight"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <EditText
                android:id="@+id/TourRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignRight="@+id/linearlayout"
                android:layout_below="@+id/textView1"
                android:ems="10"
                android:scrollHorizontally="false"
                android:hint="Remark: "
                android:textSize="@dimen/text_two"
                android:textColor="#000"
                android:inputType="text"
                android:lines="4"
                android:maxLength="500"
                />
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/remarkLayout"
        >

        <ImageView
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/save1"
            android:tint="#FFF"
            android:layout_weight="0.5" />
        <ImageView
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/update"
            android:tint="#FFF"
            android:layout_weight="0.5" />
        <ImageView
            android:id="@+id/button2"
            android:src="@drawable/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#FFF"
            android:layout_weight="0.5"
            />
        <ImageView
            android:id="@+id/takePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#FFF"
            android:layout_weight="0.5"
            />
        <ImageView
            android:id="@+id/button3"
            android:src="@drawable/delete1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#FFF"
            android:layout_weight="0.5"
            />
        <ImageView
            android:id="@+id/findbutton1"
            android:src="@drawable/find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#FFF"
            android:layout_weight="0.5"
            />

    </LinearLayout>
</RelativeLayout>