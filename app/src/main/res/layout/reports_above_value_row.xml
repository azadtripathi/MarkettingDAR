<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <TextView
            android:id="@+id/partyName"
            style="@style/listItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:text="Party Name"
            android:textColor="#6a6969"
            android:textSize="17sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        style="@style/listSubItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1" android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/address"
            style="@style/listSubItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="0.34"
            android:text="Address"
            android:textColor="#6a6969"
            android:textSize="17sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/industryType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#6a6969"
            android:textSize="18sp"
            android:layout_toLeftOf="@+id/monbileNo"
            android:text="TextView"
            android:padding="5dp" />

<TextView
    android:id="@+id/monbileNo"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:gravity="right|center_vertical"
    android:hint="Mobile No"
    android:padding="5dp"
    android:paddingLeft="10dp"
    android:text=""
    android:textColor="#FF8A00"
    android:textSize="18sp"
    android:textStyle="bold|italic" />

    </RelativeLayout>

</RelativeLayout>