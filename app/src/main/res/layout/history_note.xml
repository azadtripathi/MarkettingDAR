<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:layout_width="3dp"
                android:id="@+id/vi"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/tagNoteName"
                style="@style/textLebal"
                android:layout_width="85dp"
                android:backgroundTint="#0073b7"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_arrow_1"
                android:padding="5dp"
                android:text="Note"
                android:textColor="@color/white" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tagNoteName"
                android:layout_toRightOf="@+id/vi"
                android:background="@drawable/border"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textNote"
                        style="@style/neweditLebal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:text="N/A"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textColor="#0073b7"
                        style="@style/neweditLebal"
                        android:text="By-"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        style="@style/neweditLebal"
                        android:padding="5dp"
                        android:id="@+id/noteusername"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editNote"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Edit"
                        android:textColor="@color/white"
                        android:layout_margin="@dimen/button_margin"
                        android:background="@drawable/button_style"
                        android:requiresFadingEdge="vertical"
                        android:textStyle="bold"
                        android:textAllCaps="false"/>

                    <TextView
                        android:id="@+id/deleteNote"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/tamato"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Delete"
                        android:textColor="@color/white"
                        android:layout_margin="@dimen/button_margin"
                        android:background="@drawable/button_style"
                        android:requiresFadingEdge="vertical"
                        android:textStyle="bold"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>