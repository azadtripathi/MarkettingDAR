<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RetailerAboveValue" 
     android:background="@drawable/app_back">
<Spinner
        android:id="@+id/beatSpinner"
        style="@style/customtheme"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/areaSpinner"
        android:layout_below="@+id/areaSpinner"
         android:ellipsize="marquee"
         android:layout_marginBottom="5dp"
        android:padding="2dp"
        />

 

 <EditText
     android:id="@+id/numberValue"
     android:layout_width="match_parent"
     android:layout_height="25dp"
     android:layout_alignLeft="@+id/areaSpinner"
     android:layout_alignRight="@+id/areaSpinner"
     android:ems="10"
     android:hint="Enter a number"
     android:padding="2dp"
     android:inputType="number"
     android:background="@drawable/input_style"
     android:layout_marginBottom="5dp" />

 <Spinner
     android:id="@+id/areaSpinner"
     style="@style/customtheme"
     android:layout_width="fill_parent"
     android:layout_height="30dp"
     android:layout_below="@+id/numberValue"
     android:layout_centerHorizontal="true"
     android:ellipsize="marquee"
     android:layout_marginBottom="5dp"
     android:padding="2dp"
      />

 <TextView
     android:id="@+id/noOfCountResultText"
     android:layout_width="wrap_content"
     android:layout_height="30dp"
     android:layout_alignLeft="@+id/beatSpinner"
     android:layout_alignRight="@+id/beatSpinner"
     android:layout_below="@+id/beatSpinner"
     android:text="TextView"
     android:textSize="22sp"
     android:padding="2dp"
     android:textColor="#000000" 
     android:layout_marginBottom="2dp"
     />
 <ListView
     android:id="@+id/listView1"
     style="@style/listStyle"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/areaSpinner"
     android:layout_below="@+id/noOfCountResultText"
     android:cacheColorHint="#000000" />

</RelativeLayout>
